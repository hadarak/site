<p id="notice"><%= notice %></p>

<h1>Lugares para viajar</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag idea.picture_url(:thumb) if idea.picture? %></td>
        <td><%= link_to 'Ver', idea %></td>
        <td><%= link_to ' | Editar | ', edit_idea_path(idea) %></td>
        <td><%= link_to 'Deletar', idea, method: :delete, data: { confirm: '⚠ Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo lugar', new_idea_path %>
